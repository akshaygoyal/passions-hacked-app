<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hotel_description_image"
        android:layout_width="match_parent"
        android:layout_height="250dp">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/hotel_description_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3-star hotel"
                android:textSize="30sp">
            </TextView>
            <TextView
                android:id="@+id/hotel_description_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Rating"
                android:layout_marginTop="10dp"
                android:textSize="30sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.8">
            <TextView
                android:id="@+id/hotel_description_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 EUR"
                android:textSize="40sp"
                android:textColor="#062454">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="per day"
                android:textSize="30sp"
                android:textStyle="italic"
                android:textColor="#062454"
                android:alpha="0.5"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/hotel_description_lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Overlooking a canal, this modern hotel is a 7-minute walk from Amstelstation, 3.5 km from the Van Gogh Museum and 4.2 km from the Anne Frank House. ">
    </TextView>

    <TextView
        android:id="@+id/hotel_description_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eerste Ringdijkstraat 4, 1097 BC Amsterdam, Netherlands">
    </TextView>
    <TextView
        android:id="@+id/hotel_description_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+31 20 665 1171">
    </TextView>
</LinearLayout>